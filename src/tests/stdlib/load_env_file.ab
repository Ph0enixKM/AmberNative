import { load_env_file, get_env_var } from "std/env"
import { file_write } from "std/fs"

// Output
// yes

main {
    let tmpdir = trust $ mktemp -d /tmp/amber-XXXX $
    trust $ cd {tmpdir} $
    trust file_write(".env", "TEST=1")
    load_env_file()
    if get_env_var("TEST") == "1" {
        echo "yes"
    }
    trust $ rm -rf {tmpdir} $
} 
